<!-- res/drawable/edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Transparent background -->
    <solid android:color="@color/white" />

    <!-- Rounded corners -->
    <corners android:radius="4dp" />

    <!-- Subtle gray border -->
    <stroke
        android:width="1dp"
        android:color="#A4A3A3" />

    <!-- Optional: inner padding to avoid text touching edges -->
    <padding
        android:left="8dp"
        android:top="12dp"
        android:right="8dp"
        android:bottom="12dp" />
</shape>
