<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Fragments.DashboardAnalyticsFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="sans-serif"
            android:textSize="21sp"
            android:paddingBottom="25dp"
            android:text="Analytics"
            android:textColor="@color/white" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@drawable/edittext_bg"
            android:backgroundTint="#019AAD"
            android:padding="12dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:text="Welcome to Analytics"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/white"
                android:text="Pig farm data visualization"
                android:textSize="15sp" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Pigs and Cages Overview"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/pigsAndCagesChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/edittext_bg"
                        android:padding="16dp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_bg"
                                android:backgroundTint="#FFC107" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="sans-serif"
                                android:text="Cages"
                                android:layout_gravity="center"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_bg"
                                android:backgroundTint="#FF5722" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="sans-serif"
                                android:text="Pigs"
                                android:layout_gravity="center"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_bg"
                                android:layout_marginLeft="4dp"
                                android:backgroundTint="#2196F3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_marginLeft="12dp"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif"
                                android:text="Male"
                                android:textSize="13sp"
                                android:textStyle="italic" />

                            <View
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:background="@drawable/circle_bg"
                                android:backgroundTint="#E91E63" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_marginLeft="12dp"
                                android:fontFamily="sans-serif"
                                android:text="Female"
                                android:textSize="13sp"
                                android:layout_gravity="center"
                                android:textStyle="italic" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:padding="8dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Pig Health Overview"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/round_corner_bg"
                        android:layout_weight="1">
                        <Spinner
                            android:id="@+id/typeDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/pigVaccineChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/edittext_bg"
                        android:padding="16dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_bg"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="#2196F3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:text="Male"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#E91E63" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:text="Female"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:padding="8dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Total Earnings"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/totalEarningsChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/edittext_bg"
                        android:padding="16dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_bg"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="#4CAF50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:text="Sold"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#D31305" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:text="Unsold"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_bg"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="#2196F3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:text="Earnings"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                android:padding="8dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Per Period Earnings"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                        <EditText
                            android:id="@+id/yearAndMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:drawablePadding="3dp"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:drawableStart="@drawable/calendar_ic"
                            android:background="@drawable/edittext_bg"
                            android:fontFamily="sans-serif-medium"
                            android:hint="Select Month and Date"
                            android:textSize="15sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/perPeriodEarningsChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/edittext_bg"
                        android:padding="16dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_bg"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="#4CAF50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:text="Sold"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="#D31305" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:text="Unsold"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_bg"
                            android:layout_marginLeft="4dp"
                            android:backgroundTint="#2196F3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center"
                            android:text="Earnings"
                            android:textSize="13sp"
                            android:textStyle="italic" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
