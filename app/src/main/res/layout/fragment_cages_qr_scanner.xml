<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="12dp"
    tools:context=".Cages.Fragments.CagesQrScannerFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:src="@drawable/cage_ic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_margin="6dp"
            android:fontFamily="sans-serif"
            android:text="Cage Name: Cage 1" />

        <TextView
            android:id="@+id/pigsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_margin="6dp"
            android:textSize="18sp"
            android:text="Pigs: 500" />
    </LinearLayout>

    <Button
        android:id="@+id/scanAgainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="@color/blueGreen"
        android:text="Scan Again" />
</LinearLayout>