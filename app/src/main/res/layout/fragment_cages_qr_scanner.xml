<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".Cages.Fragments.CagesQrScannerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/cageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cage 1"
                    android:textSize="24sp"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#1F2933"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pig_ic"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/pigsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 Pigs"
                        android:textSize="18sp"
                        android:textColor="#4B5563" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Scan Again Button -->
        <Button
            android:id="@+id/scanAgainBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Again"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            app:cornerRadius="14dp"
            android:backgroundTint="@color/blueGreen" />

        <!-- Description Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:background="@drawable/dashed_border"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:text="Note:"
                android:textSize="18sp"
                android:textColor="#4CAF50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#374151"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:text="Each cage has a unique name and an attached QR code. When the QR code is scanned, it displays the cage name and the total number of pigs inside, allowing users to quickly identify and monitor cage occupancy for efficient management and record-keeping." />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
