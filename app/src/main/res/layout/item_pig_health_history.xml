<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="3dp"
    android:background="@drawable/edittext_bg">



    <TextView
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action: "
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_marginBottom="8dp"
        android:drawableEnd="@drawable/action_key_ic"
        android:drawableTint="@color/white"
        android:textSize="13sp"
        android:background="@drawable/round_corner_bg"
        android:padding="8dp"
        android:backgroundTint="@color/emeraldGreen"
        android:textColor="@color/white"

        />



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="10dp"
      android:background="@drawable/dashed_border">

      <!-- Health Event Section -->

      <TextView
          android:id="@+id/tvPigType"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="PigType: " />

      <TextView
          android:id="@+id/tvAge"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Age:" />

      <TextView
          android:id="@+id/tvWeight"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Weight: " />

      <TextView
          android:id="@+id/tvFeed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Feed: " />

      <TextView
          android:id="@+id/tvIllness"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Illness:" />

      <TextView
          android:id="@+id/tvVaccine"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Vaccine:" />

      <TextView
          android:id="@+id/tvVaccineDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Vaccine Date:" />

      <TextView
          android:id="@+id/tvVaccineNextDue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Vaccine Next Due:" />

      <TextView
          android:id="@+id/tvLastCheckup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Last Checkup:" />

      <TextView
          android:id="@+id/tvHealthStatus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Health Status:" />

      <TextView
          android:id="@+id/tvCheckupDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Checkup Date:" />

      <TextView
          android:id="@+id/tvNotes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Notes:" />

  </LinearLayout>


</LinearLayout>
